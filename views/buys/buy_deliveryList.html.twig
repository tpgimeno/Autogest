{% extends "dashboard.twig" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h2> Albaranes Compra </h2>
            </div>   
            <div class="col-md-2 d-flex justify-content-end align-items-end">
                <a class="link " href="/admin">Volver</a> 
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <tr>
                        <th>NºAlbaran</th>
                        <th>Fecha</th>                       
                        <th>Proveedor</th>
                        <th>Total</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    {% for delivery in deliveries %}
                        <tr>
                            <td>{{ delivery.delivery_number }}</td>
                            <td>{{ delivery.date }}</td>                            
                            <td>{{ delivery.provider }}</td>
                            <td>{{ delivery.total }}</td>
                            <td><a href="/buys/deliveries/form?id={{delivery.id}}">Edit</td>
                            <td><a href="/buys/deliveries/delete?id={{delivery.id}}">Delete</td>
                        </tr>
                    {% endfor %}                
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-end">
                <form action="/buys/deliveries/form" method="get">
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Añadir">
                        <a href="/admin" class="btn btn-primary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}