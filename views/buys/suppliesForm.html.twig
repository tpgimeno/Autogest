{% extends "dashboard.twig" %}
{% block content %}
<div class="container">
    {% block javascripts %}
            <script>
                {{ include('js/supplies.js')}}
            </script>
        {% endblock %}
    <div class="row">
        <div class="col-md-10">
            <h2> Recambios </h2>
        </div>   
        <div class="col-md-2 d-flex justify-content-end align-items-end">
            <a class="link pr-4" href="/intranet/buys/supplies/list">Lista</a> 
            <a class="link " href="/intranet/admin">Volver</a> 
        </div>        
    </div>
    <div class="row">
        <div class="col">
            <div class="alert alert-dark" role="alert">
                {{ responseMessage }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form action="/intranet/buys/supplies/save" method="post">
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="inputId">ID</label>                        
                        <input type="text" name="id" class="form-control" id="inputId" placeholder="" value="{{ supplie.id }}">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputName">REF.</label>                        
                        <input type="text" name="ref" class="form-control" id="inputRef" placeholder="Referencia" value="{{ supplie.ref }}">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputMader">Fabricante</label>
                        <select type="text" name="mader" class="form-control" id="inputNif" placeholder="Fabricante" value="{{ supplie.mader }}">
                            {% for mader in maders %}
                                <option>{{ mader.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputMaderCode">Ref. Fabricante</label>
                        <input type="text" name="mader_code" class="form-control" id="inputMaderCode" placeholder="Referencia Fabricante" value="{{ supplie.mader_code }}">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label for="inputName">Nombre</label>
                        <input type="text" name="name" class="form-control" id="inputName" placeholder="Nombre" value="{{ supplie.name }}">
                    </div>
                </div>                                                      
                <div class="form-row">                         
                    <div class="form-group col">
                        <label for="observations">Comentarios</label>
                        <textarea class="form-control" name="observations" id="observations" rows="6">{{ supplie.observations }}</textarea>
                    </div>                                  
                </div>
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="inputStock">Stock Actual</label>
                        <input type="text" name="stock" class="form-control" id="inputStock" placeholder="" value="{{ supplie.stock }}">
                    </div>
                    <div class="form-group col-md-3 offset-md-3">
                        <label for="inputPvc">Precio Compra</label>
                        <input type="text" name="pvc" class="form-control" id="inputPvc" placeholder="" value="{{ supplie.pvc }}">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputPvc">Precio Venta</label>
                        <input type="text" name="pvp" class="form-control" id="inputPvp" placeholder="" value="{{ supplie.pvp }}">
                    </div>
                </div>
                <div class="form-row">                    
                    <div class="form-group col-md-3 offset-md-6">
                        <label for="inputTvaBuy">Iva Compra</label>
                        <input type="text" name="tva_buy" class="form-control" id="inputTvaBuy" placeholder="" value="" disabled>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputTvaSell">Iva Venta</label>
                        <input type="text" name="tva_sell" class="form-control" id="inputTvaSell" placeholder="" value="" disabled>
                    </div>
                </div>
                <div class="form-row">                    
                    <div class="form-group col-md-3 offset-md-6">
                        <label for="inputTotalBuy">Total Compra</label>
                        <input type="text" name="total_buy" class="form-control" id="inputTotalBuy" placeholder="" value="">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputTotalSell">Total Venta</label>
                        <input type="text" name="total_sell" class="form-control" id="inputTotalSell" placeholder="" value="">
                    </div>
                </div>
                <div class="form-row">
                    <div class="col text-right">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button type="reset" class="btn btn-primary">Cancelar</button>
                </div>
            </form>
        </div>
        
    </div>
</div>    
{% endblock %}