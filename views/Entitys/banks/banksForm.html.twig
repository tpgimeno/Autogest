{% extends "menu.html.twig" %}
{% import 'macros.html.twig' as fields %}
{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h2> {{ title }} </h2>
        </div>   
        {{ fields.return(list, tab) }}       
    </div>
    <div class="row">
        {{ fields.alert(responseMessage) }}
    </div>
    <div class="row">
        <div class="col">
            <form id="{{formName}}" action="{{ save }}" method="post">
                <div class="form-row">
                    {{ fields.input2(inputs.id.id, inputs.id.name, inputs.id.title, value.id) }}
                    {{ fields.input2offset8(inputs.bankCode.id, inputs.bankCode.name, inputs.bankCode.title, value.bankCode) }}
                </div>
                <div class="form-row">
                    {{ fields.input4(inputs.name.id, inputs.name.name, inputs.name.title, value.name) }}
                    {{ fields.input3(inputs.fiscalId.id, inputs.fiscalId.name, inputs.fiscalId.title, value.fiscalId) }}
                    {{ fields.input5(inputs.fiscalName.id, inputs.fiscalName.name, inputs.fiscalName.title, value.fiscalName) }}
                </div>                                                         
                <div class="form-row">  
                    {{ fields.input6(inputs.address.id, inputs.address.name, inputs.address.title, value.address) }}
                    {{ fields.input4(inputs.city.id, inputs.city.name, inputs.city.title, value.city) }}   
                    {{ fields.input2(inputs.postalCode.id, inputs.postalCode.name, inputs.postalCode.title, value.postalCode) }}
                                                                                
                </div>
                <div class="form-row"> 
                    {{ fields.input5(inputs.state.id, inputs.state.name, inputs.state.title, value.state) }}
                    {{ fields.input4(inputs.country.id, inputs.country.name, inputs.country.title, value.country) }}                          
                    {{ fields.input3(inputs.phone.id, inputs.phone.name, inputs.phone.title, value.phone) }}
                </div>
                <div class="form-row">                         
                    {{ fields.input6(inputs.email.id, inputs.email.name, inputs.email.title, value.email) }}                       
                    {{ fields.input6(inputs.site.id, inputs.site.name, inputs.site.title, value.site) }}                      
                </div>
                <div class="form-row">
                    {{ fields.buttonsForm(tab) }}
                </div>
            </form>
        </div>
    </div>
</div>    
{% endblock %}