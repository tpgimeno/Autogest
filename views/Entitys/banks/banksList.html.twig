{% extends "menu.html.twig" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h2> Banks </h2>
            </div>   
            <div class="col-md-2 d-flex justify-content-end align-items-end">
                <a class="link " href="/Intranet/admin?selected_tab=home">Volver</a> 
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <tr>
                        <th>Nombre</th>
                        <th>Población</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    {% for bank in banks %}
                        <tr>
                            <td>{{ bank.name }}</td>
                            <td>{{ bank.city }}</td>
                            <td>{{ bank.phone }}</td>
                            <td>{{ bank.email }}</td>
                            <td><a href="/Intranet/banks/form?id={{bank.id}}">Edit</a></td>
                            <td><a href="/Intranet/banks/delete?id={{bank.id}}">Delete</a></td>
                        </tr>
                    {% endfor %}                
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-end">
                <form id="addBank" action="/Intranet/banks/form" method="get">
                    <div class="form-group">
                        <input id="submit" type="submit" class="btn btn-primary" value="Añadir">
                        <a href="/Intranet/admin?selected_tab=home" class="btn btn-primary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}