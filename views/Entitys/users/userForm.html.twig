{% extends "menu.html.twig" %}
{% import 'macros.html.twig' as fields %}
{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h2> {{ title }} </h2>
        </div>   
        {{ fields.return(list, tab) }}       
    </div>
    <div class="row">
        {{ fields.alert(responseMessage) }}
    </div>
    <div class="row">
        <div class="col">
            <form id="{{formName}}" action="{{save}}" method="post">
                <div class="form-row">
                    {{ fields.input2(inputs.id.id, inputs.id.name, inputs.id.title, value.id) }}
                    {{ fields.input5(inputs.email.id, inputs.email.name, inputs.email.title, value.email) }}
                    {{ fields.input5password(inputs.password.id, inputs.password.name, inputs.password.title, value.password) }}
                </div>                
                <div class="form-row">
                    {{ fields.buttonsForm(tab) }}
                </div>
            </form>        
        </div>
    </div>
</div>    
{% endblock %}