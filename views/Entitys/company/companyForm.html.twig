{% extends "dashboard.twig" %}
{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h2> Empresas </h2>
        </div>   
        <div class="col-md-2 d-flex justify-content-end align-items-end">
            <a class="link pr-4" href="/Intranet/company/list">Lista</a> 
            <a class="link " href="/Intranet/admin">Volver</a> 
        </div>        
    </div>
    <div class="row">
        <div class="col">
            <div class="alert alert-dark" role="alert">
                {{ responseMessage }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form id="CompanyForm" action="/Intranet/company/save" method="post">
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label for="inputId">ID</label>                        
                        <input type="text" name="id" class="form-control" id="inputId" placeholder="" value="{{ company.id }}">
                    </div>                   
                </div>
                <div class="form-row">
                    <div class="form-group col-md-9">
                        <label for="inputName">Nombre</label>                        
                        <input type="text" name="name" class="form-control" id="inputName" placeholder="Nombre" value="{{ company.name }}">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputNif">NIF/CIF</label>
                        <input type="text" name="fiscalId" class="form-control" id="inputNif" placeholder="ID Fiscal" value="{{ company.fiscalId }}">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label for="inputSocialName">Razon Social</label>
                        <input type="text" name="fiscalName" class="form-control" id="inputSocialName" placeholder="Razón Social" value="{{ company.fiscalName }}">
                    </div>
                </div>
                <div class="form-group">
                        <label for="inputAddress">Dirección</label>
                        <input type="text" name="address" class="form-control" id="inputAddress" placeholder="C/ La paz, 4" value="{{ company.address }}">
                    </div>                                      
                <div class="form-row">                         
                    <div class="form-group col-md-10">
                        <label for="inputCity">Población</label>
                        <input type="text" name="city" class="form-control" id="inputCity" placeholder="Ciudad" value="{{ company.city }}">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputZip">C.P.</label>
                        <input type="text" name="postalCode" class="form-control" id="inputZip" placeholder="Código Postal" value="{{ company.postalCode }}">
                    </div>                                             
                </div>
                <div class="form-row"> 
                    <div class="form-group col-md-6">
                        <label for="inputState">Provincia/Estado</label>
                        <input type="text" name="state" class="form-control" id="inputState" placeholder="Provincia" value="{{ company.state }}">
                    </div> 
                    <div class="form-group col-md-3">
                        <label for="inputCountry">Pais</label>
                        <input type="text" name="country" class="form-control" id="inputCountry" placeholder="Pais" value="{{ company.country }}">
                    </div>                          
                    <div class="form-group col-md-3">
                        <label for="inputPhone">Teléfono</label>
                        <input type="text" name="phone" class="form-control" id="inputPhone" placeholder="Phone" value="{{ company.phone }}">
                    </div>
                </div>
                <div class="form-row">                         
                    <div class="form-group col-md-6">
                        <label for="inputEmail">Email</label>
                        <input type="text" name="email" class="form-control" id="inputEmail" placeholder="Email" value="{{ company.email }}">
                    </div>                        
                    <div class="form-group col-md-6">
                        <label for="inputWeb">Web</label>
                        <input type="text" name="site" class="form-control" id="inputWeb" placeholder="Web" value="{{ company.site }}">
                    </div>                       
                </div>
                <div class="form-row">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <button type="reset" class="btn btn-primary">Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>    
{% endblock %}