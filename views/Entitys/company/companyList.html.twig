{% extends "menu.html.twig" %}
{% import 'macros.html.twig' as fields %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h2> Companies </h2>
            </div>   
            <div class="col-md-2 d-flex justify-content-end align-items-end">
                <a class="link" href="/Intranet/admin?selected_tab={{ tab }}">Volver</a> 
            </div>
        </div>
        <div class="row">
            {{ fields.searchList(search) }}
        </div>
        <div class="row">
            <div class="col">
                <table id="companyTable" class="table">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Población</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    {% for comp in companies %}
                        <tr>
                            <td>{{ comp.id }}</td>
                            <td>{{ comp.name }}</td>
                            <td>{{ comp.city }}</td>
                            <td>{{ comp.phone }}</td>
                            <td>{{ comp.email }}</td>
                            <td><a id="edit" href="/Intranet/company/form?id={{comp.id}}">Edit</a></td>
                            <td><a id="delete" href="/Intranet/company/delete?id={{comp.id}}">Delete</a></td>
                        </tr>
                    {% endfor %}                
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-end">
                <form id="addCompany" action="/Intranet/company/form" method="get">
                    {{ fields.buttonsList(tab) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}