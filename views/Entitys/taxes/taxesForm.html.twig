{% extends "menu.html.twig" %}
{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h2> Tipos de Iva </h2>
        </div>   
        <div class="col-md-2 d-flex justify-content-end align-items-end">
            <a class="link pr-4" href="/Intranet/taxes/list">Lista</a> 
            <a class="link " href="/Intranet/admin">Volver</a> 
        </div>        
    </div>
    <div class="row">
        <div class="col">
            <div class="alert alert-dark" role="alert">
                {{ responseMessage }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form id="taxesForm" action="/Intranet/taxes/save" method="post">
                <div class="form-row">
                    <div class="form-group offset-3 col-md-1">                        
                        <label for="inputId">ID</label>                        
                        <input type="text" name="id" class="form-control" id="inputId" placeholder="Nombre" value="{{ taxes.id }}">
                    </div>
                    <div class="form-group col-md-6">                        
                        <label for="inputName">Nombre</label>                        
                        <input type="text" name="name" class="form-control" id="inputName" placeholder="Nombre" value="{{ taxes.name }}">
                    </div>
                    <div class="form-group col-md-2">                        
                        <label for="inputPercentaje">Porcentaje</label>                        
                        <input type="text" name="percentaje" class="form-control" id="inputPercentaje" placeholder="" value="{{ taxes.percentaje }}">
                    </div> 
                </div>              
                <div class="form-row">
                    <div class="col text-right">
                        <button id="submit" type="submit" class="btn btn-primary">Guardar</button>
                        <button type="reset" class="btn btn-primary">Cancelar</button>
                    </div>
                </div>
            </form>        
        </div>
    </div>
</div>
{% endblock %}

