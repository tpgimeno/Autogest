{% extends "menu.html.twig" %}
{% import 'macros.html.twig' as fields %}
{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h2> {{ title }} </h2>
        </div>   
        {{ fields.return(list, tab) }}      
    </div>
    <div class="row">
        {{ fields.alert(responseMessage) }}
    </div>
    <div class="row">
        <div class="col">
            <form id="{{formName}}" action="{{ save }}" method="post">
                <div class="form-row">
                    {{ fields.input2(inputs.id.id, inputs.id.name, inputs.id.title, value.id) }}                    
                </div>
                <div class="form-row">
                    {{ fields.select(inputs.selectBank.id, inputs.selectBank.name, inputs.selectBank.title, value, banks) }}              
                    {{ fields.select(inputs.selectOwner.id, inputs.selectOwner.name, inputs.selectOwner.title, value, owners) }}                
                    {{ fields.input4(inputs.accountNumber.id, inputs.accountNumber.name, inputs.accountNumber.title, value.accountNumber) }}
                </div>
                <div class="form-row">
                    {{ fields.textarea(inputs.observations.id, inputs.observations.name, inputs.observations.title, value.observations) }}                   
                </div>
                <div class="form-row">
                    {{ fields.buttonsForm(tab) }}
                </div>
            </form>
        </div>
    </div>
</div>    
{% endblock %}