{% extends "menu.html.twig" %}
{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h2> Ubicación </h2>
        </div>   
        <div class="col-md-2 d-flex justify-content-end align-items-end">
            <a class="link pr-4" href="/Intranet/locations/list">Lista</a> 
            <a class="link " href="/Intranet/admin?selected_tab=home">Volver</a> 
        </div>        
    </div>
    <div class="row">
        <div class="col">
            <div class="alert alert-dark" role="alert">
                {{ responseMessage }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form id="locationForm" action="/Intranet/locations/save" method="post">
                <div class="form-row">
                    <div class="form-group offset-md-2 col-md-2">
                        <label for="inputId">ID</label>                        
                        <input type="text" name="id" class="form-control" id="inputId" placeholder="" value="{{ location.id }}">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="selectStore">Ubicación</label>  
                        <select name="store" class="form-control" id="selectStore" value="{{ location.store }}">
                            {% for store in stores %}
                                {% if location.store == store.name %}
                                    <option selected="selected">{{ store.name }}</option>
                                {% else %}
                                    <option>{{ store.name }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>                        
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputName">Nombre</label>                        
                        <input type="text" name="name" class="form-control" id="inputName" placeholder="Nombre" value="{{ location.name }}">
                    </div>
                </div>              
                <div class="form-row">
                    <div class="col text-right">
                        <button id="submit" type="submit" class="btn btn-primary">Guardar</button>
                        <button type="reset" class="btn btn-primary">Cancelar</button>
                    </div>
                </div>
            </form>        
        </div>
    </div>
</div>
{% endblock %}

