{% extends "menu.html.twig" %}
{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h2> Forma de Pago </h2>
        </div>   
        <div class="col-md-2 d-flex justify-content-end align-items-end">
            <a class="link pr-4" href="/Intranet/paymentWays/list">Lista</a> 
            <a class="link " href="/Intranet/admin?selected_tab=buys">Volver</a> 
        </div>        
    </div>
    <div class="row">
        <div class="col">
            <div class="alert alert-dark" role="alert">
                {{ responseMessage }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form id="paymentWaysForm" action="/Intranet/paymentWays/save" method="post">
                <div class="form-row">
                    <div class="form-group offset-md-2 col-md-2">                        
                        <label for="inputId">ID</label>                        
                        <input type="text" name="id" class="form-control" id="inputId" placeholder="" value="{{ paymentWay.id }}">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group offset-md-2 col-md-4">                        
                        <label for="inputName">Nombre</label>                        
                        <input type="text" name="name" class="form-control" id="inputName" placeholder="Nombre" value="{{ paymentWay.name }}">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="selectAccount">Cuenta</label>  
                        <select name="account" class="form-control" id="selectStore">
                            {% for account in accounts %}
                                {% if account.id == paymentWay.account %}
                                    <option selected="selected">{{ account.accountNumber }}</option>
                                {% else %}
                                    <option>{{ account.accountNumber }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>                        
                    </div>
                    <div class="form-group col-md-2">                        
                        <label for="inputDiscount">Descuento</label>                        
                        <input type="text" name="discount" class="form-control" id="inputDiscount" placeholder="" value="{{ paymentWay.discount }}">
                    </div> 
                </div>              
                <div class="form-row">
                    <div class="col text-right">
                        <button id="submit" type="submit" class="btn btn-primary">Guardar</button>
                        <a href="/Intranet/admin?selected_tab=buys" class="btn btn-primary">Cancelar</a>
                    </div>
                </div>
            </form>        
        </div>
    </div>
</div>
{% endblock %}

