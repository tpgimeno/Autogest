{% extends "menu.html.twig" %}
{% import 'macros.html.twig' as fields %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-10">               
                <h2> {{ title }} </h2>
            </div>   
            <div class="col-md-2 d-flex justify-content-end align-items-end">
                <a class="link " href="/Intranet/admin?selected_tab={{ tab }}">Volver</a> 
            </div>
        </div>
        <div class="row">
           {{ fields.searchList(search) }}
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <tr>
                        <th>Nombre</th>
                        <th>Cuenta</th>
                        <th>Descuento</th>                        
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    
                    {% for paymentWay in paymentWays %}
                        <tr>
                            <td>{{ paymentWay.name }}</td>
                            {% for account in accounts %}
                                {% if account.id == paymentWay.account %}
                                    <td>{{ account.accountNumber }}</td>
                                {% endif %}
                            {% endfor %}
                            <td>{{ paymentWay.discount }}</td>                           
                            <td><a href="/Intranet/paymentWays/form?id={{paymentWay.id}}">Edit</a></td>
                            <td><a href="/Intranet/paymentWays/delete?id={{paymentWay.id}}">Delete</a></td>
                        </tr>
                    {% endfor %}                
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-end">
                <form id="addPaymentWay" action="/Intranet/paymentWays/form" method="get">
                    {{ fields.buttonsList(tab) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}

