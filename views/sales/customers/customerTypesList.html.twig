{% extends "menu.html.twig" %}
{% import 'macros.html.twig' as fields %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-10">               
                <h2> {{ title }} </h2>
            </div>   
            <div class="col-md-2 d-flex justify-content-end align-items-end">
                <a class="link " href="/Intranet/admin?selected_tab={{ tab }}">Volver</a> 
            </div>
        </div>        
        <div class="row">
            <div class="col">
                <table class="table">
                    <tr>
                        <th>Descripcion</th>                        
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    {% for customer_type in customer_types %}
                        <tr>
                            <td>{{ customer_type.name }}</td>                           
                            <td><a href="/Intranet/customers/type/form?id={{customer_type.id}}">Edit</a></td>
                            <td><a href="/Intranet/customers/type/delete?id={{customer_type.id}}">Delete</a></td>
                        </tr>
                    {% endfor %}                
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-end">
                <form id="addCustomerType" action="/Intranet/customers/type/form" method="get">
                    {{ fields.buttonsList(tab) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}


