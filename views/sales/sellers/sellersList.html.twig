{% extends "menu.html.twig" %}
{% import 'macros.html.twig' as fields %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h2> {{ title }} </h2>
            </div>   
            <div class="col-md-2 d-flex justify-content-end align-items-end">
                <a class="link " href="/Intranet/admin?selected_tab={{ tab }}">Volver</a> 
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <tr>
                        <th>Nombre</th>                        
                        <th>Tel√©fono</th>
                        <th>Email</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    {% for seller in sellers %}
                        <tr>
                            <td>{{ seller.name }}</td>                            
                            <td>{{ seller.phone }}</td>
                            <td>{{ seller.email }}</td>
                            <td><a href="/Intranet/sellers/form?id={{seller.id}}">Edit</a></td>
                            <td><a href="/Intranet/sellers/delete?id={{seller.id}}">Delete</a></td>
                        </tr>
                    {% endfor %}                
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-end">
                <form id="addSeller" action="/Intranet/sellers/form" method="get">
                    {{ fields.buttonsList(tab) }}         
                </form>
            </div>
        </div>
    </div>
{% endblock %}