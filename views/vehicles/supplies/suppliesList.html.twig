{% extends "menu.html.twig" %}
{% import 'macros.html.twig' as fields %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h2> {{ title }} </h2>
            </div>   
            <div class="col-md-2 d-flex justify-content-end align-items-end">
                <a class="link " href="/Intranet/admin?selected_tab={{ tab }}">Volver</a> 
            </div>
        </div>
        <div class="row">
            {{ fields.searchList(search) }}
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <tr>
                        <th>Referencia</th>
                        <th>Fabricante</th>
                        <th>Nombre</th>
                        <th>Stock</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>                    
                    {% for supplie in supplies %}
                        <tr>
                            <td>{{ supplie.ref }}</td>
                            <td>{{ supplie.mader }}</td>
                            <td>{{ supplie.name }}</td>
                            <td>{{ supplie.stock }}</td>
                            <td><a href="/Intranet/vehicles/supplies/form?id={{supplie.id}}">Edit</a></td>
                            <td><a href="/Intranet/vehicles/supplies/delete?id={{supplie.id}}">Delete</a></td>
                        </tr>
                    {% endfor %}                
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-end">
                <form id="addSupply" action="/Intranet/vehicles/supplies/form" method="get">
                    {{ fields.buttonsList(tab) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}