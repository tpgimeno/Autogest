{% extends "dashboard.twig" %}
{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h2> Marca </h2>
        </div>   
        <div class="col-md-2 d-flex justify-content-end align-items-end">
            <a class="link pr-4" href="/Intranet/vehicles/brands/list">Lista</a> 
            <a class="link " href="/Intranet/admin">Volver</a> 
        </div>        
    </div>
    <div class="row">
        <div class="col">
            <div class="alert alert-dark" role="alert">
                {{ responseMessage }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form id="brandForm" action="/Intranet/vehicles/brands/save" method="post">
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label for="inputId">Id</label>                        
                        <input type="text" name="id" class="form-control" id="inputId" placeholder="Id" value="{{ brand.id }}">
                    </div>
                    <div class="form-group col-md-10">
                        <label for="inputName">Nombre</label>                        
                        <input type="text" name="name" class="form-control" id="inputName" placeholder="Nombre" value="{{ brand.name }}">
                    </div>                    
                </div>              
                <div class="form-row">
                    <div class="col text-right">
                        <button id="submit" type="submit" class="btn btn-primary">Guardar</button>
                        <a href="/Intranet/vehicles/brands/list" class="btn btn-primary">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>    
{% endblock %}
