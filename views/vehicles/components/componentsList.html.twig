{% extends "menu.html.twig" %}
{% import 'macros.html.twig' as fields %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h2> Componentes </h2>
            </div>   
            <div class="col-md-2 d-flex justify-content-end align-items-end">
                <a class="link " href="/Intranet/admin?selected_tab={{ tab }}">Volver</a> 
            </div>
        </div>
        <div class="row">
            {{ fields.searchList(search) }}
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <tr>
                        <th>Referencia</th>
                        <th>Fabricante</th>
                        <th>Nombre</th> 
                        <th>Precio Venta</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    {% for component in components %}
                        <tr>
                            <td>{{ component.ref }}</td>                            
                            <td>{{ component.mader }}</td>                                
                            <td>{{ component.name }}</td>  
                            <td style="text-align:center">{{ component.pvp|format_currency('EUR') }}</td>
                            <td><a href="/Intranet/vehicles/components/form?id={{component.id}}">Edit</a></td>
                            <td><a href="/Intranet/vehicles/components/delete?id={{component.id}}">Delete</a></td>
                        </tr>
                    {% endfor %}                
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-end">
                <form id="addComponent" action="/Intranet/vehicles/components/form" method="get">
                    {{ fields.buttonsList(tab) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}