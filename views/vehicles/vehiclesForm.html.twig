{% extends "menu.html.twig" %}
{% import 'macros.html.twig' as fields %}
{% block content %}
<div class="container">
    {% block javascripts %}
            {% if script %}
            <script>
                {{ include(script)}}
            </script>
        {% endif %}
    {% endblock %}
    <div class="row">
        <div class="col-md-10">
            <h2> {{ title }} </h2>
        </div>   
        {{ fields.return(list,tab) }}        
    </div>
    <div class="row">
        {{ fields.alert(responseMessage) }}
    </div>    
    <div class="row">
        <div class="col">
            <form id="{{formName}}" action="{{ save }}" method="post">
                <div class="form-row">
                    <div class="col">
