{% extends "menu.html.twig" %}
{% import 'macros.html.twig' as fields %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-10">               
                <h2> {{ title }} </h2>
            </div>   
            <div class="col-md-2 d-flex justify-content-end align-items-end">
                <a class="link " href="/Intranet/admin?selected_tab={{ tab }}">Volver</a> 
            </div>
        </div>
        <div class="row">
            <div class="col">
                <form id="importForm" action="/Intranet/vehicles/import" method="post" class="form">
                    <div class="form-row">
                        <div class="col-2 offset-10">                            
                            <button type="submit" class="btn btn-primary mb-2">Importar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            {{ fields.searchList(search) }}
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <tr>
                        <th>Matricula</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Descripcion</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    {% for vehicle in vehicles %}
                        <tr>
                            <td>{{ vehicle.plate }}</td>
                            <td>{{ vehicle.brand }}</td>
                            <td>{{ vehicle.model }}</td>
                            <td>{{ vehicle.description }}</td>
                            <td><a href="/Intranet/vehicles/form?id={{vehicle.id}}">Edit</a></td>
                            <td><a href="/Intranet/vehicles/delete?id={{vehicle.id}}">Delete</a></td>
                        </tr>
                    {% endfor %}                
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-end">
                <form id="addVehicle" action="/Intranet/vehicles/form" method="get">
                    {{ fields.buttonsList(tab) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
