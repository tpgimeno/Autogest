{% extends "dashboard.twig" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-10">               
                <h2> Vehiculos </h2>
            </div>   
            <div class="col-md-2 d-flex justify-content-end align-items-end">
                <a class="link " href="/admin">Volver</a> 
            </div>
        </div>
        <div class="row">
            <div class="col">
                <form id="importForm" action="/vehicles/import" method="post" class="form">
                    <div class="form-row">
                        <div class="col-2 offset-10">                            
                            <button type="submit" class="btn btn-primary mb-2">Importar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <form id="searchForm" action="/vehicles/search" method="post" class="form">
                    <div class="container">
                        <div id="formRow" class="form-row text-right">
                            <div class="col-11">                                                                                
                                <input id="searchField" type="text" name="searchFilter" class="form-control mb-2 mr-sm-2" id="inlineFormSearchFilter" placeholder="Nombre / Cif / Telefono / email">
                            </div>
                            <div class="col-1">
                                <button type="submit" class="btn btn-primary mb-2">Buscar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <tr>
                        <th>Matricula</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Descripcion</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    {% for vehicle in vehicles %}
                        <tr>
                            <td>{{ vehicle.plate }}</td>
                            <td>{{ vehicle.brand }}</td>
                            <td>{{ vehicle.model }}</td>
                            <td>{{ vehicle.description }}</td>
                            <td><a href="/vehicles/form?id={{vehicle.id}}">Edit</td>
                            <td><a href="/vehicles/delete?id={{vehicle.id}}">Delete</td>
                        </tr>
                    {% endfor %}                
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-end">
                <form action="/vehicles/form" method="get">
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="AÃ±adir">
                        <a href="/admin" class="btn btn-primary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
