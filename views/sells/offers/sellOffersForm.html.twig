                        <input type="text" name="cp" class="form-control" id="inputCp" placeholder="" value="{{ selected_customer.postalCode }}">
                    </div>                    
                </div>
                <div class="form-row mb-3">  
                    <div class="form-group col-md-3">
                        <label for="inputCity">Población</label>
                        <input type="text" name="city" class="form-control" id="inputCity" placeholder="" value="{{ selected_customer.city }}">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputState">Provincia</label>
                        <input type="text" name="state" class="form-control" id="inputState" placeholder="" value="{{ selected_customer.state }}">
                    </div>                                       
