{% macro select(id, name, title, value, iterable, type = 'text') %}
    <div class="form-group col-md-4">                        
        <label for="{{ id }}">{{ title }}</label>
        <select type="{{ type }}" name="{{ name }}" class="form-control" id="{{id}}">
            {% for iter in iterable %}                
                {% if iter.id == value.iter %}
                    <option selected="selected">{{ iter.iter }}</option>
                {% else %}
                    <option>{{ iter.iter }}</option>
                {% endif %}
            {% endfor %}
        </select>
    </div>
{% endmacro select %}
