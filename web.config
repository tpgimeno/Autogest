<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer> 
	<security>           
            <requestFiltering>                
                <fileExtensions>                   
					<add fileExtension=".css" allowed="true" />
					<add fileExtension=".jpg" allowed="true" />
					<add fileExtension=".png" allowed="true" />
                </fileExtensions>
            </requestFiltering>
        </security>
        <directoryBrowse enabled="true" />                
        <defaultDocument>
            <files>
                <remove value="index.php" />
                <add value="index.php" />
            </files>
        </defaultDocument>              
	<rewrite>
		<rules>			
			<rule name="rule1V" stopProcessing="true">
			<match url="^(.*)/$" />
			<conditions logicalGrouping="MatchAll">
                        <add input="{REQUEST_URI}" pattern=".css" negate="true" />
                        <add input="{REQUEST_URI}" pattern=".png" negate="true" />
             
            </conditions>
			<action type="Rewrite" url="//{R:1}" />
			</rule>
			<rule name="rule2V" stopProcessing="true">
			<match url="^" />
			<action type="Rewrite" url="/public/index.php" />
                    <conditions>
                        <add input="{REQUEST_URI}" pattern=".png" negate="true" />
                        <add input="{REQUEST_URI}" pattern=".css" negate="true" />
                        <add input="{REQUEST_URI}" pattern=".jpg" negate="true" />
                        <add input="{REQUEST_URI}" pattern=".svg" negate="true" />
                        <add input="{REQUEST_URI}" pattern=".js" negate="true" />
                    </conditions>
			</rule>
		</rules>
            <rewriteMaps>
                <rewriteMap name="IsCSS">
                    <add key="/public/images" value="/intranet/public/images" />
                </rewriteMap>
            </rewriteMaps>            
	</rewrite>
        <httpProtocol>
            <customHeaders>
                <remove name="X-Content-Type-Options" />
                <remove name="Content-Type" />
            </customHeaders>
        </httpProtocol>
        <handlers accessPolicy="Read, Execute, Script" />    
    </system.webServer>
</configuration>